{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false
    },
    "build": {
      "outputs": [
        "dist/**",
        "dist-*/**",
        "build/**",
        "api/**",
        "public/build/**"
      ]
    }
  }
}